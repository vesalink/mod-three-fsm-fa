{
    "globals": {
        "ts-jest": {
            "tsConfig": "./tsconfig.json"
        }
    },
    "transform": {
        "^.+\\.ts?$": "ts-jest"
    },
    "rootDir": "./",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)?$",
    "testPathIgnorePatterns": [
        "/lib/",
        "/node_modules/",
        "<rootDir>/build/"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/build/reports",
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.spec.ts",
        "!src/**/*.d.ts",
        "!src/**/index.ts",
        "!src/**/*.test.*",
        "!src/**/__test__/*"
    ],
    "coverageReporters": [
        "html",
        "lcov",
        "text"
    ]
}